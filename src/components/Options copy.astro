---
// Component: SegmentedToggle.astro
const { title, options, name = 'stage' } = Astro.props;
---
<h2 class="col-span-4 text-xl">{title}</h2>
<div class="col-span-4 flex rounded-full bg-white overflow-hidden font-medium text-center text-[#a2a2a2] text-sm inset-shadow-sm border-sm">
  {options.map((opt, index) => (
    <>
      <input
        type="radio"
        name={name}
        id={`${name}-${opt.value}`}
        value={opt.value}
        class="sr-only peer/${opt.value}"
        checked={index === 0}
      />
      <label
        for={`${name}-${opt.value}`}
        class="flex-1 py-2 cursor-pointer peer-checked/${opt.value}:bg-[#0C3471] peer-checked/${opt.value}:text-white hover:bg-[#0C3471] hover:text-white"
      >
        {opt.label}
      </label>
    </>
  ))}
</div>
